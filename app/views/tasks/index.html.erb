<div class="container">
  <h1 class="my-4">Welcome to Tasks Manager</h1>

  <div class="mb-3">
    <%= link_to "Add New Task", tasks_new_path, class: "btn btn-primary" %>
  </div>

  <div>
    <% @tasks.each do |task| %>
      <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <%= link_to task.title, task_path(task), class: "fw-bold me-3" %>
          <%= check_box_tag "completed_#{task.id}", "1", task.completed, class: "form-check-input", disabled: true %>
        </div>
      </div>
    <% end %>
  </div>
</div>
