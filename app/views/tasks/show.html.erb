<div class="container">
  <h1 class="my-4"><%= @task.title %></h1>

  <div class="mb-3">
    <p><strong>Details:</strong></p>
    <p><%= @task.details %></p>
  </div>

  <div class="mb-3">
    <p><strong>Completed:</strong> <%= @task.completed ? "Yes" : "No" %></p>
  </div>

  <div class="mb-3">
    <%= link_to "Back to Tasks list", tasks_path, class: "btn btn-secondary" %>
  </div>

  <div class="mb-3">
    <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-warning" %>
  </div>

  <div>
    <%= link_to "Destroy Task", tasks_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger"  %>
  </div>
</div>
