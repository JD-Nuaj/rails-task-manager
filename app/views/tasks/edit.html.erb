<div class="container">
  <h1 class="my-4">Edit Task</h1>

  <%= form_with model: @task do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :details, class: "form-label" %>
      <%= f.text_area :details, class: "form-control", rows: 4 %>
    </div>

    <div class="mb-3 form-check">
      <%= f.check_box :completed, class: "form-check-input" %>
      <%= f.label :completed, "Completed?", class: "form-check-label" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Update Task", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div>
    <%= link_to "Back to Tasks List", tasks_path, class: "btn btn-secondary" %>
  </div>
</div>
